{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {},
    "lint:fix": {},
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "env": ["GEL_SERVER_BIN"]
    },
    "ci:typecheck": {
      "dependsOn": [
        "@gel/auth-nextjs#typecheck",
        "@gel/auth-express#typecheck",
        "@gel/auth-remix#typecheck",
        "@gel/auth-sveltekit#typecheck",
        "@gel/ai#typecheck",
        "@gel/vercel-ai-provider#typecheck"
      ]
    },
    "ci:test": {
      "dependsOn": ["build", "gel#test", "@gel/auth-core#test"],
      "env": ["CI", "GEL_SERVER_BIN"]
    },
    "ci:integration-test": {
      "dependsOn": ["build"],
      "env": ["CI", "GEL_SERVER_BIN"]
    }
  }
}
