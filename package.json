{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "integration-tests/*"
  ],
  "packageManager": "yarn@1.22.19",
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "eslint": "^9.3.0",
    "prettier": "^3.2.5",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.0.0-alpha.22"
  },
  "scripts": {
    "lint": "eslint --quiet",
    "lint:fix": "eslint --fix",
    "format": "prettier --check 'packages/*/(src|test)/**/*.(mts|ts)' 'integration-tests/*/*.(mts|ts)'",
    "format:fix": "prettier --write 'packages/*/(src|test)/**/*.(mts|ts)' 'integration-tests/*/*.(mts|ts)'",
    "generate": "yarn workspace @edgedb/generate generate"
  }
}
