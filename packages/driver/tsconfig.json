{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/cli.mts", "src/**/*.deno.ts"]
}
