{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "stripInternal": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "edgedb": [
        "./src/index.node.ts"
      ],
      "reflection": [
        "./src/reflection/index.ts"
      ],
      "@syntax/*": [
        "src/syntax/*"
      ],
      "@generated/*": [
        "./qb/generated/example"
      ],
    }
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "**/*.deno.ts",
    "test/deno/*",
    "dist"
  ]
}
