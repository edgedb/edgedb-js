{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "stripInternal": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "useDefineForClassFields": true,
    "resolveJsonModule": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "**/*.deno.ts",
    "test/deno/*",
    "dist",
    "qb",
  ]
}
