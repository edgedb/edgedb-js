{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "stripInternal": true
  },
  "include": ["src", "test"]
}
